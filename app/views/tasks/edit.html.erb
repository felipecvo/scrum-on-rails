<h1>Editing task</h1>

<% form_for([@project, @story, @task]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :user_id %><br />
    <%= collection_select(:task, :user_id, @users, :id, :login) %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    Status<br />
    <strong><%= @task.status %></strong>
  </p>
  <p>
    <%= f.submit "Atualizar" %>
  </p>
<% end %>




<p><%= link_to 'tasks', project_story_tasks_path(@project, @story) %> |
<%= link_to 'exibir', project_story_task_path %> |
<%= link_to 'voltar', project_story_tasks_path( @project, @story) %> </p>
