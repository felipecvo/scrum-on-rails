<h1>Listing stories</h1>

<table>
  <tr>
    <th>Title</th>
    <th>As a</th>
    <th>I want to</th>
    <th>So i can</th>
  </tr>

<% for story in @stories %>
  <tr>
    <td><%=h story.title %></td>
    <td><%=h story.as_a %></td>
    <td><%=h story.i_want_to %></td>
    <td><%=h story.so_i_can %></td>
    <td><%= link_to 'Show', project_story_path(@project, story) %></td>
    <td><%= link_to 'Edit', edit_project_story_path(@project, story) %></td>
    <td><%= link_to 'Destroy', story, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

